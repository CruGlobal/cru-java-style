<?xml version="1.0"?>
<!--
  This RFC 5261 xml diff document specifies the difference between Cru's checkstyle rules
  and the google_checks rules included in the checkstyle distribution.
-->
<diff>

  <!-- indent with 4 spaces -->
  <replace sel="module/module/module[@name='Indentation']/property[@name='basicOffset']/@value">
    4
  </replace>
  <replace sel="module/module/module[@name='Indentation']/property[@name='caseIndent']/@value">
    4
  </replace>
  <replace sel="module/module/module[@name='Indentation']/property[@name='arrayInitIndent']/@value">
    4
  </replace>

  <!-- limit to 120 columns instead of 100 -->
  <replace sel="module/module/module[@name='LineLength']/property[@name='max']/@value">
    120
  </replace>

  <!-- require whitespace after a comma -->
  <add sel="module/module[@name='TreeWalker']">
    <module name="WhitespaceAfter">
      <property name="tokens" value="COMMA"/>
    </module>
  </add>

  <!-- when wrapping, operators should be at the end of lines -->
  <replace sel="module/module/module[@name='OperatorWrap']/property[@name='option']/@value">
    eol
  </replace>

  <!-- don't require <p> tags in javadoc -->
  <remove sel="module/module/module[@name='JavadocParagraph']" ws="after"/>

  <!-- don't require javadoc on public methods/constructors -->
  <add sel="module/module/module[@name='JavadocMethod']">
    <property name="allowMissingJavadoc" value="true"/>
  </add>

  <!-- enable @SuppressWarnings -->
  <add sel="module/module[@name='TreeWalker']">
    <module name="SuppressWarningsHolder" />
  </add>
  <add sel="module[@name='Checker']">
    <module name="SuppressWarningsFilter" />
  </add>

  <!-- use 'error', not 'warning' -->
  <remove sel="module[@name='Checker']/property[@name='severity']" ws="after"/>

</diff>
